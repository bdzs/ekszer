Function  NewExtCharType(Num: Byte; Ch: Char; OldTip,Tip: CharType): Char;
Var Offs : ShortInt;
    Poz  : ShortInt;
    ChTip: CharType;
    St   : String[92];
Begin

  Offs := 0;

  {$IFDEF NORVEG}
  If NorvegE(Num) Then
  Begin
    Offs:= MaxNorveg;
    St  := Nconv2;
  End
  Else
  If SamiE(Num) Then
  Begin
    Offs:= MaxSami;
    St  := Sconv2;
  End;
  {$ENDIF}
  {$IFDEF GOROG}
  If GorogE(Num) Then
  Begin
    Offs:= MaxGorog;
    St  := Gconv2;
  End;
  {$ENDIF}

  If Offs > 0 Then
  Begin
    Poz   := Pos(Ch,St);
    If Poz > 0 Then
    Begin
      ChTip := CharType((Poz-1) DIV Offs);

      If ((OldTip = Every) OR (ChTip = OldTip)) AND (ChTip <> Tip) Then
      Begin
        Inc(Poz,Offs*(Byte(Tip)-Byte(ChTip)));
        Ch  := St[Poz];
      End;
    End;
  End;

  NewExtCharType := Ch;

End;

