  Wsx[0] := #80;

  Inc(X1);
  Dec(X2);
  Inc(Y1);
  Dec(Y2);

  IF (WINDOW_NUMBER < MAX_WINDOW_NUM) AND (X1 <= X2) AND (Y1 <= Y2) THEN
  BEGIN

    MouseCursor(False);

    IF SAVE_WINDOW(X1-1,Y1-1,X2+1,Y2+1,WINDOW_NUMBER) THEN
    BEGIN
      CREATE_WINDOW := TRUE;
      WIN_DATA[WINDOW_NUMBER].COLOR := COL;
      KERET(X1-1,Y1-1,X2+1,Y2+1,FCOL);

      If KellCloseBox Then
      Begin
