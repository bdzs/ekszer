Function GetVarName; { (N: Byte):String; }
Var Ws         : String[60];
Begin
  With CLV^ Do
    Begin
      Ws[0] := #59;
      FillChar(Ws[1],59,00);
      Move(CimRecBuff^[VarPos[N]],Ws[1],VarLen[N]);
      While (Ws[Length(Ws)] = #00) AND (Length(Ws) > 0) Do Dec(Byte(Ws[0]));

      {If Pos(#00,Ws) > 0 Then Ws[0] := Char(Pos(#00,Ws)-1);}

      If Length(Ws) > VarLen[N] Then Ws[0] := Char(VarLen[N]);
      GetVarName := Ws;
    End
End;

Function GetVar; { (N: Byte):String; }

Var Ws         : String[60];
    CimDate    : DateTip;
    EvSt       : String[4];
    HoSt,NapSt : String[2];
Begin
  With CLV^ Do
    Begin
      If N <= (VarNum-2) Then
      Begin
        Numeric := False;
        Ws := GetVarName(N);
      End
      Else
      Begin
        If N = VarNum Then {RDATE}
        Begin
          With RecDate^ Do
          Begin
            Str(Honap:2,HoSt);
            HoSt[1] := Char(Byte(HoSt[1]) OR $30);
            Str(Nap:2, NapSt);
            NapSt[1] := Char(Byte(NapSt[1]) OR $30);
            Str(Ev:4,EvSt);
          End;
          Ws := EvSt + HoSt + NapSt;
        End
        Else  {RNUM}
        Begin
          Numeric := True;
          Str(CountRec,Ws);
          Ws[1] := Char(Byte(Ws[1]) OR $30);
        End;
      End;
      GetVar := Ws;
    End;
End;

