  ReqBuf[2] := ModeB;
  ReqBuf[3] := ConnNum;

  Reqbuf0 := 2;
  Repbuf0 := MsgBufferSize+2;

  Asm
    PUSH  ES
    PUSH  SI
    PUSH  DI

    MOV   SI,Offset ReqBuf
    MOV   DI,Offset RepBuf
    PUSH  DS
    POP   ES
    MOV   AH,$E3
    MOV   AL,ModeB

    INT   $21

    MOV   GlobalError,AL

    POP   DI
    POP   SI
    POP   ES
  End;

  ObjName[0] := #0;

  If GlobalError = 0 Then
  Begin
    Move(RepBuf[8],ObjName[1],48);
    Inc(ObjName[0]);
    While ObjName[Byte(ObjName[0])] <> #00 Do Inc (ObjName[0]);
    Dec(ObjName[0]);
  End;

  GetUserName := ObjName;

End; {Function GetUserName}

